<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        ***************************************
                    正文相关的颜色配置
        ***************************************
    -->

    <!-- 主内容背景 -->
    <color name="content_primary_bg_normal">#ffffff</color>
    <color name="content_primary_bg_pressed">@color/content_primary_bg_normal</color>
    <color name="content_primary_bg_disabled">@color/content_primary_bg_normal</color>

    <!-- 主内容文本颜色 -->
    <color name="content_primary_textcolor_normal">#ffffff</color>
    <color name="content_primary_textcolor_pressed">@color/content_primary_bg_normal</color>
    <color name="content_primary_textcolor_disabled">@color/content_primary_bg_normal</color>

    <!-- 放在主内容背景下用于区分的二级背景，如分隔开的区块背景 -->
    <color name="content_secondary_bg_normal">@color/content_primary_bg_normal</color>
    <color name="content_secondary_bg_pressed">@color/content_secondary_bg_normal</color>
    <color name="content_secondary_bg_disabled">@color/content_secondary_bg_normal</color>

    <color name="btn_primary_textcolor_normal">@color/app_main</color>
    <color name="btn_primary_textcolor_pressed">@color/app_main</color>
    <color name="btn_primary_textcolor_disabled">@color/app_inactive</color>


    <!-- 辅按钮色调，与主按钮行程对比，一般比主按钮色值浅 -->
    <color name="btn_secondary_normal">@color/app_main_light</color>
    <color name="btn_secondary_pressed">@color/app_main_light</color>
    <color name="btn_secondary_disabled">@color/app_inactive</color>
</resources>