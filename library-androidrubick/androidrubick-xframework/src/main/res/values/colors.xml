<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 应用的主色，主色调，例如：按钮主色调，title bar背景或者文本色调 -->
    <color name="app_main">#3F51B5</color>
    <!-- 主色调深色值， -->
    <color name="app_main_dark">#303F9F</color>
    <!-- 部分地方深色主调 -->
    <color name="app_main_light">#C5CAE9</color>
    <!-- 应用的辅色，按钮辅色调 -->
    <color name="app_inactive">#B6B6B6</color>



    <!-- 应用的主色，主色调，例如：按钮主色调，title bar背景或者文本色调 -->
    <color name="app_main_textcolor_normal">#FFFFFF</color>
    <color name="app_main_textcolor_hover">@color/app_main_textcolor_normal</color>
    <color name="app_main_dark_textcolor_normal">@color/app_main_textcolor_normal</color>
    <color name="app_main_dark_textcolor_hover">@color/app_main_textcolor_hover</color>
    <color name="app_main_light_textcolor_normal">@color/app_main_textcolor_normal</color>
    <color name="app_main_light_textcolor_hover">@color/app_main_textcolor_hover</color>
    <color name="app_inactive_textcolor">@color/app_main_textcolor_normal</color>



    <!-- 应用的强调色，置于主色调中也能一眼看到强调部分 -->
    <color name="app_highlight">#448AFF</color>
    <color name="app_highlight_textcolor">@color/app_main_textcolor</color>

</resources>