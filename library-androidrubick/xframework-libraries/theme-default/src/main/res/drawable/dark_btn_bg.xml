<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/content_btn_radius"/>
            <solid android:color="@color/dark_btn_bg_inactive"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/content_btn_radius"/>
            <solid android:color="@color/dark_btn_bg_hover"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/content_btn_radius"/>
            <solid android:color="@color/dark_btn_bg_normal"/>
        </shape>
    </item>

</selector>