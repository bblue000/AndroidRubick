<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        ***************************************
                    颜色
        ***************************************
    -->
    <!-- 主按钮背景色 -->
    <color name="main_btn_bg_normal">@color/app_main</color>
    <color name="main_btn_bg_hover">@color/app_main_highlight</color>
    <color name="main_btn_bg_inactive">@color/app_inactive</color>

    <!-- 主按钮文字颜色 -->
    <color name="main_btn_textcolor_normal">@color/app_main_textcolor</color>
    <color name="main_btn_textcolor_hover">@color/app_main_highlight_textcolor</color>
    <color name="main_btn_textcolor_inactive">@color/app_inactive_textcolor</color>


    <!-- 辅按钮色调，与主按钮行程对比，一般比主按钮色值深 -->
    <color name="dark_btn_bg_normal">@color/app_main_dark</color>
    <color name="dark_btn_bg_hover">@color/app_main_dark_highlight</color>
    <color name="dark_btn_bg_inactive">@color/app_inactive</color>

    <color name="dark_btn_textcolor_normal">@color/app_main_dark_textcolor</color>
    <color name="dark_btn_textcolor_hover">@color/app_main_dark_highlight_textcolor</color>
    <color name="dark_btn_textcolor_inactive">@color/app_inactive_textcolor</color>

    <!-- 辅按钮色调，与主按钮行程对比，一般比主按钮色值浅 -->
    <color name="light_btn_bg_normal">@color/app_main_light</color>
    <color name="light_btn_bg_hover">@color/app_main_light_highlight</color>
    <color name="light_btn_bg_inactive">@color/app_inactive</color>

    <color name="light_btn_textcolor_normal">@color/app_main_light_textcolor</color>
    <color name="light_btn_textcolor_hover">@color/app_main_light_highlight_textcolor</color>
    <color name="light_btn_textcolor_inactive">@color/app_inactive_textcolor</color>







    <!--
        ***************************************
                    尺寸
        ***************************************
    -->
    <!-- 按钮的边角半径 -->
    <dimen name="content_btn_radius">@dimen/radius</dimen>



</resources>